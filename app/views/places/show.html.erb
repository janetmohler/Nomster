<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>
  <!-- Listing of all the photos -->
  <h1>This is where the photos will be displayed</h1>
  <% @place.photos.each do |photo| %>
    <div class="col-xs-12 col-sm-6">
      <blockquote>
        <%= photo.caption %>
      </blockquote>
    </div>
  <% end %>
  <!-- buttons will appear to the user that created that place -->
  <div class="pull-right">
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
      <!-- Button to trigger the photos form modal -->
      <button class="btn btn-success" data-toggle="modal" data-target="#photoModal">
      Add a photo
      </button>
      <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>

<!-- Modal for photos form -->
<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a photo</h4>
      </div>

      <!-- Form for photos -->
      <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
        
        <div class="modal-body">
          <%= f.input :picture %>
          <%= f.input :caption %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Photo", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<!-- Modal for comments form -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>

      <!-- Form for comments -->
      <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>

        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %> 
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Giant button to add a comment -->
<div class="col-xs-10 col-xs-offset-1">
  <h1 class="pull-left">Comments</h1>
  <!-- Button to trigger the comments form modal -->
  <button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#commentModal">
  Add a comment
  </button>
</div>

<div class="clear"></div>

<!-- Listing of all the comments -->
<% @place.comments.each do |comment| %>
  <div class="col-xs-12 col-sm-6">
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>
